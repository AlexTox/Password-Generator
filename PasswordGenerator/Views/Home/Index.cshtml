@model PasswordModel
@{
    ViewData["Title"] = "HOME";
}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div>
                    <h3 class="display-4">Generator Settings</h3>
                </div>
                <form asp-action="PasswordGenerator" asp-controller="Home" method="post" class="col-md-7">
                    <i class="fas fa-globe"></i>
                    <div class="form-group">
                        <label asp-for="@Model.Length">Password Length</label>
                        <input type="number" min="4" asp-for="@Model.Length" default="4" value="@Model.Length" aria-describedby="PasswordLength" placeholder="4">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Count">Password Count</label>
                        <input type="number" min="1" asp-for="@Model.Count" default="1" value="@Model.Count" aria-describedby="PasswordCount" placeholder="1">
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.IsIncludeLowercase">Include Lowercase Charset</label>
                        @Html.CheckBoxFor(x => x.IsIncludeLowercase)
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.IsIncludeUppercase">Include Uppercase Charset</label>
                        @Html.CheckBoxFor(x => x.IsIncludeUppercase)
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.IsIncludeNumeric">Include Numeric Charset</label>
                        @Html.CheckBoxFor(x => x.IsIncludeNumeric)
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.IsIncludeSpecial">Include Special Charset</label>
                        @Html.CheckBoxFor(x => x.IsIncludeSpecial)
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="col-6">
                <div class="text-center">
                    <h3>Project description</h3>
                    <p>

                    </p>
                </div>
            </div>
        </div>
        @if (Model.Passwords.Count != 0)
        {
                <div class="text-center">
                    <h3 class="display-4">Generated Passwords</h3>
                </div>
                <table class="table table-striped table-bordered table-sm table-responsive">
                    @if (Model.Passwords != null)
                    {
                        @foreach (var password in Model.Passwords)
                        {
                            <tr>
                                <td style="word-break: break-word;">
                                    @password
                                </td>
                            </tr>
                        }
                    }
                </table>
        }
    </div>